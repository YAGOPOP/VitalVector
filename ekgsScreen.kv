#:kivy 2.0.0

<ekgsScreen>:

    squaresLabel: squaresLabel
    forSSLabel: forSSLabel
    written4SSLabel: written4SSLabel
    writtenSquaresLabel: writtenSquaresLabel
    # imagesett: imagesett


    orientation: "vertical"


    canvas.before:
        Color:
            rgba: root.backolor
        Rectangle:
            pos: self.pos
            size: self.size

    Widget:
        size_hint_y: .02

    

    AnchorLayout:
        anchor_x: "left"
        padding: 20
        size_hint_y: .2
        Button:
            size_hint_x: .1
            background_color: [1, 1, 1, 1]
            # canvas.before:
            #     Color:
            #         rgba: root.backolor
            #     Rectangle:
            #         pos: self.pos
            #         size: self.size

            # background_normal: "data/settingsbuttonnormalicon.png"
            # background_down: "data/settingsbuttonpressedicon.png"
            # on_press: root.settingsbuttonexecutepressed()
            # on_release: root.settingsbuttonexecutereleased()
            # Image:
            #     id: imagesett
            #     source: "data/settingsbuttonNormalicon.png"
            #     pos: self.parent.pos
            #     size: self.parent.size
        
    

    
    GridLayout:
        rows: 3
        cols: 2
        size_hint_y: .30
        
        Label:
            id: writtenSquaresLabel
            text: "Клеточки:"
            font_size: root.LabelsFontSize
            color: 0, 0, 0, 1
            halign: "right"
            size_hint_x: .5
            text_size: self.size[0] * .9, self.size[1]
        Label:
            id: squaresLabel
            text: "0"
            font_size: root.LabelsFontSize
            color: 0, 0, 0, 1
            halign: "left"
            size_hint_x: .5
            text_size: self.size[0] * .9, self.size[1]
        Widget:
            size_hint_y: .05
        Widget:
            size_hint_y: .05

        Label:
            id: written4SSLabel
            text: "ЧСС:"
            font_size: root.LabelsFontSize
            color: 0, 0, 0, 1
            halign: "right"
            size_hint_x: .5
            text_size: self.size[0] * .9, self.size[1]
        Label:
            id: forSSLabel
            text: "0"
            font_size: root.LabelsFontSize
            color: 0, 0, 0, 1
            halign: "left"
            size_hint_x: .5
            text_size: self.size[0] * .9, self.size[1]

    Widget:
        size_hint_y: .45
    
    GridLayout:
        rows: 4
        cols: 3
        padding: 20
        spacing: 10

        Button:
            text: "7"
            font_size: root.ButtonsFontSize
            on_press: root.countSquaresAnd4SS(self)
        Button:
            text: "8"
            font_size: root.ButtonsFontSize
            on_press: root.countSquaresAnd4SS(self)
        Button:
            text: "9"
            font_size: root.ButtonsFontSize
            on_press: root.countSquaresAnd4SS(self)
        Button:
            text: "4"
            font_size: root.ButtonsFontSize
            on_press: root.countSquaresAnd4SS(self)
        Button:
            text: "5"
            font_size: root.ButtonsFontSize
            on_press: root.countSquaresAnd4SS(self)
        Button:
            text: "6"
            font_size: root.ButtonsFontSize
            on_press: root.countSquaresAnd4SS(self)
        Button:
            text: "1"
            font_size: root.ButtonsFontSize
            on_press: root.countSquaresAnd4SS(self)
        Button:
            text: "2"
            font_size: root.ButtonsFontSize
            on_press: root.countSquaresAnd4SS(self)
        Button:
            text: "3"
            font_size: root.ButtonsFontSize
            on_press: root.countSquaresAnd4SS(self)
        Button:
            text: "Очистить"
            font_size: root.ButtonsFontSize
            on_press: root.clear(self)
            background_normal: ""
            background_color: [.8, .2, .2, 1]
        Button:
            text: "0"
            font_size: root.ButtonsFontSize
            on_press: root.countSquaresAnd4SS(self)
        Button:
            background_color: [1, .4, .1, 1]
            background_normal: ""
            on_press: root.DeleteLast(self)
            Image:
                source: "data/deletebuttonicon.png"
                pos: self.parent.pos
                size: self.parent.size