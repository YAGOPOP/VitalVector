#:kivy 2.0.0

<forssScreen>:
    ageLabel: ageLabel
    forSSLabel: forSSLabel
    written4SSLabel: written4SSLabel
    writtenAgeLabel: writtenAgeLabel


    orientation: "vertical"


    canvas.before:
        Color:
            rgba: root.backolor
        Rectangle:
            pos: self.pos
            size: self.size

    Widget:
        size_hint_y: .1

    
    GridLayout:
        rows: 2
        cols: 2
        size_hint_y: .30
        
        Label:
            id: writtenAgeLabel
            text: "Возраст:"
            font_size: root.LabelsFontSize
            halign: "right"
            text_size_x: self.size[0] * .9
        Label:
            id: ageLabel
            text: "0"
            font_size: root.LabelsFontSize
            halign: "left"
            text_size_x: self.size[0] * .9
        Label:
            id: written4SSLabel
            text: "ЧСС:"
            font_size: root.LabelsFontSize
            halign: "right"
            text_size_x: self.size[0] * .9
        Label:
            id: forSSLabel
            text: "0"
            font_size: root.LabelsFontSize
            halign: "left"
            text_size_x: self.size[0] * .9

    Widget:
        size_hint_y: .45
    
    GridLayout:
        rows: 4
        cols: 3
        padding: 20
        spacing: 10
        # size_hint_y: .4

        Button:
            text: "7"
            font_size: root.ButtonsFontSize
            on_press: root.countAgeAnd4SS(self)
        Button:
            text: "8"
            font_size: root.ButtonsFontSize
            on_press: root.countAgeAnd4SS(self)
        Button:
            text: "9"
            font_size: root.ButtonsFontSize
            on_press: root.countAgeAnd4SS(self)
        Button:
            text: "4"
            font_size: root.ButtonsFontSize
            on_press: root.countAgeAnd4SS(self)
        Button:
            text: "5"
            font_size: root.ButtonsFontSize
            on_press: root.countAgeAnd4SS(self)
        Button:
            text: "6"
            font_size: root.ButtonsFontSize
            on_press: root.countAgeAnd4SS(self)
        Button:
            text: "1"
            font_size: root.ButtonsFontSize
            on_press: root.countAgeAnd4SS(self)
        Button:
            text: "2"
            font_size: root.ButtonsFontSize
            on_press: root.countAgeAnd4SS(self)
        Button:
            text: "3"
            font_size: root.ButtonsFontSize
            on_press: root.countAgeAnd4SS(self)
        Button:
            text: "Очистить"
            font_size: root.ButtonsFontSize
            on_press: root.clear(self)
            background_normal: ""
            background_color: [.8, .2, .2, 1]
        Button:
            text: "0"
            font_size: root.ButtonsFontSize
            on_press: root.countAgeAnd4SS(self)
        Button:
            text: "<-"
            font_size: root.ButtonsFontSize
            on_press: root.DeleteLast(self)
        
        

