<EkgsScreen>:
    name: "EkgsScreenSc"

    BoxLayout:
        orientation: "vertical"


        canvas.before:
            Color:
                rgba: root.backolor
            Rectangle:
                pos: self.pos
                size: self.size

        Label:
            size_hint_y: .25
            color: 0, 0, 0, 1
            text: "Подсчёт ЧСС по клеточкам ЭКГ"
            font_size: root.ButtonsFontSize


        BoxLayout:
            size_hint_y: .30
            orientation: 'vertical'
            Label:
                id: squaresLabel
                text: "Клеточки: 0"
                font_size: root.LabelsFontSize
                color: 0, 0, 0, 1
            Widget:
                size_hint_y: .1
            Label:
                id: forSSLabel
                text: "ЧСС: 0"
                font_size: root.LabelsFontSize
                color: 0, 0, 0, 1


        Widget:
            size_hint_y: .45
        
        GridLayout:
            rows: 4
            cols: 3
            padding: 20, 0, 20, 10
            spacing: 10

            Button:
                text: "7"
                font_size: root.ButtonsFontSize
                on_press: root.countSquaresAnd4SS(self)
            Button:
                text: "8"
                font_size: root.ButtonsFontSize
                on_press: root.countSquaresAnd4SS(self)
            Button:
                text: "9"
                font_size: root.ButtonsFontSize
                on_press: root.countSquaresAnd4SS(self)
            Button:
                text: "4"
                font_size: root.ButtonsFontSize
                on_press: root.countSquaresAnd4SS(self)
            Button:
                text: "5"
                font_size: root.ButtonsFontSize
                on_press: root.countSquaresAnd4SS(self)
            Button:
                text: "6"
                font_size: root.ButtonsFontSize
                on_press: root.countSquaresAnd4SS(self)
            Button:
                text: "1"
                font_size: root.ButtonsFontSize
                on_press: root.countSquaresAnd4SS(self)
            Button:
                text: "2"
                font_size: root.ButtonsFontSize
                on_press: root.countSquaresAnd4SS(self)
            Button:
                text: "3"
                font_size: root.ButtonsFontSize
                on_press: root.countSquaresAnd4SS(self)
            Button:
                text: "Очистить"
                font_size: root.ButtonsFontSize
                on_press: root.clear(self)
                background_normal: ""
                background_color: [.8, .2, .2, 1]
            Button:
                text: "0"
                font_size: root.ButtonsFontSize
                on_press: root.countSquaresAnd4SS(self)
            Button:
                text: ""
                background_color: [1, .4, .1, 1]
                background_normal: ""
                font_size: root.ButtonsFontSize
                on_press: root.DeleteLast(self)
                Image:
                    source: "data/deletebuttonicon.png"
                    pos: self.parent.pos
                    size: self.parent.size
        BoxLayout:
            orientation: "horizontal"
            size_hint_y: .2
            padding: 20, 0, 20, 0

            FloatLayout:
            Button:
                size_hint_x: None
                width: self.height
                background_normal: ""
                background_color: 0, 0, 0, 0
                on_press: 
                    root.manager.current = "ForssScreenSc"
                    root.manager.transition.direction = 'right'
                Image:
                    source: "data/forssButtonImage.png"
                    pos: self.parent.pos
                    size: self.parent.size
            FloatLayout:
            Button:
                size_hint_x: None
                width: self.height
                background_color: 0, 0, 0, 0
                background_normal: ""
                on_press: 
                    root.manager.current = "EkgsScreenSc"
                    root.manager.transition.direction = "left"
                Image:
                    source: "data/ekgsButtonImage.png"
                    pos: self.parent.pos
                    size: self.parent.size
            FloatLayout:
